<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".DetailsConceptActivity">

    <TextView
        android:id="@+id/txt_concept_Title"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_concept_Definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_below="@+id/txt_concept_Title"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/txt_concept_Answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_below="@+id/txt_concept_Definition"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/txt_concept_Example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_below="@+id/txt_concept_Answer"
        android:layout_marginLeft="8dp"
        />

    <ToggleButton
        android:id="@+id/Fav_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_button"
        android:backgroundTint="#00BFA5"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:textOff=""
        android:textOn=""
        />

</RelativeLayout>